{
    "name": "pwa-idc-ls",
    "version": "0.0.1",
    "description": "Electron edition of IDC-LX0",
    "author": "IDC-LC-2024",
    "authors": [
        "unit-404 <conway24b@gmail.com>",
        "user-404 <conway24b@yandex.ru>"
    ],
    "type": "module",
    "main": "app/index.mjs",
    "engines": {
        "node": ">=22"
    },
    "keywords": [
        "fastify",
        "server"
    ],
    "license": "MIT",
    "private": false,
    "scripts": {
        "start": "electron ./app/index.mjs",
        "make-win64": "npx electron-builder --win --x64"
    },
    "target": "web",
    "dependencies": {
        "@fastify/autoload": "^5.8.0",
        "@fastify/cors": "^9.0.1",
        "@fastify/static": "^7.0.1",
        "electron": "^31.1.0",
        "electron-nightly": "^33.0.0-nightly.20240627",
        "fastify": "^4.27.0",
        "glob": "^10.4.2",
        "module-alias": "^2.2.3",
        "rimraf": "^5.0.7"
    },
    "browserslist": [
        "last 1 chrome version",
        "last 1 firefox version"
    ],
    "build": {
        "appId": "pwa.idc.lx",
        "files": [
            "app"
        ],
        "extraResources": [
            {
                "from": "../index/",
                "to": "./index"
            },
            {
                "from": "../https/",
                "to": "./https"
            }
        ],
        "directories": {
            "buildResources": "resources"
        },
        "extraFiles": [
            "credentials"
        ],
        "publish": null,
        "win": {
            "target": "portable",
            "icon": "../src/assets/icons/home/512x.png"
        }
    },
    "config": {
        "forge": {
            "makers": [],
            "publishers": [],
            "packagerConfig": {
                "icon": "../src/assets/icons/home/512x.png"
            }
        }
    }
}
